<% var item=content.install.stable %>
<div class="featured" class="mainElement">
    <div class="slide version">
        <div class="image">
            <% if (item.thumbnail) { %>
                <img class="thumbnail" src="<%= item.thumbnail %>" data-src="<%= item.src %>">
            <% } %>
        </div>

        <div class="text">
            <div class="caption">
                <% var item=content.install.stable %>
                <h3><%= item.title %></h3>
                <% include _download_table_windows_installer %>
                <div style="text-align: right;">
                    <a href="/learn/licensing">Licenses &raquo;</a>
                    <a href="/release-notes#<%= item.version %>">Release Notes &raquo;</a>
                    <a class="link" href="<%= item.path||item.src %>" target="_blank">Read More &raquo;</a>
                </div>
                <!--
                <br/>
                <% var item=content.install.milestone %>
                <h3><%= item.title %></h3>
                <% include _download_table %>
                <div style="text-align: right;">
                    <a style="display: inline-block;text-align: right;" class="link" href="<%= item.path||item.src %>" target="_blank">Read More &raquo;</a>
                </div>
                -->
            </div>
        </div>
        <div class="content">
            <h3>After the Download</h3>
            <p>For <a href="/download/windows">Windows</a> please run the installer and use the Neo4j Desktop to start and stop your server.</p>
            <p>For <a href="/download/linux">Linux/Mac</a> please download and unzip the distribution. <br/>
                Start the server with <code>bin/neo4j start</code> from a terminal.</p>
            <p>Open <a href="http://localhost:7474" target="_blank">http://localhost:7474</a> for the Web UI.</p>
        </div>
        <div class="clear"></div>
    </div>
</div><!-- featured -->
