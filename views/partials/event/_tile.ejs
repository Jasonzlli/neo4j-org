<%
/*
When: Fri Feb 15, 2013 3:45am to 4:30am PST

Where: Open Venue, 20 Bank Plain, Norwich, Norfolk NR2 4SF\n
Event Status: confirmed\n
Event Description: Event Info
<a href="\&quot;http://www.google.com/url?q=http%3A%2F%2Fsyncconf.com%2F&amp;ust=1359165468136000&amp;usg=AFQjCNHxoMNKtRJSsyuqj9CRGHanxvNHeQ\&quot;" target="\&quot;_blank\&quot;">Event Info</a>
*/
    var event=item;	
    if (event) {
    if (event['Group']) {
%>
    <div area="<%= event['Area'] %>" class="event meetup item" group="<%= event['Group'] %>" event="<%= event['Meetup'] %>">
<% } else { %>
	<div area="<%= event['Area'] %>" class="event item ">
<%  }  %>
            <a target='_blank' href="<%= event['Url'] %>">
                <img class="thumbnail" src="<%= event['Image'] || event['Portrait'] || (event['Group'] ? '/meetup?img=true&group='+event['Group']: undefined) || {Webinar:'/assets/img/events/neo4j_icon_webinar.png',Training:'/assets/img/events/neo4j_icon_training.png', Meetup: '/assets/img/events/neo4j_icon_meetup.png'}[event.Type] || '/assets/img/events/neo4j_icon_webinar.png' %>" width="300" title="<%= event['Title'] %>" alt="<%= event['Title'] %> logo"/>
            </a>
            <div class="caption">
                <h3><%- event['Title'] %></h3>
                <% if (event['Start']) { %>
                When: <%= event['Start'] %><br/>
				<hr/>
                <% } %>
                <% if (event['Location']) { %>
                Where: <a href="http://maps.google.com/?q=<%= event['Location'] %>" target="_blank"><%= event['Location'] %></a><br/>
				<hr/>
                <% } %>
                <% if (event['Presenter']) { %>
                    <a target='_blank' href="http://twitter.com/<%= event['Twitter'] %>">
                        <h4><em>with <%= event['Presenter'] %></em></h4>
                    </a>
                <% } %>
                <p><%-: event['Description'] | truncate_words: 30 %></p>
                <a class="btn" href="<%= event['Url'] %>" target="_blank">Participate </a><br/>
            </div>
        </div>
        <% }  %>