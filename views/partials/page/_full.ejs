<%
	var hasPath = item.path;
	var image = item.img ? item.img : item.thumbnail ? item.thumbnail : (item.featured && item.featured.thumbnail ? item.featured.thumbnail : '');

%>
<div class="featured" class="mainElement">
    <div class="slide page">
        <div class="image">
                <%- link_to(item.path, '<img class="thumbnail" src="'+image+'" />') %>
        </div>
        <div class="text">
            <div class="caption">
                <h3 id="<%= item.key || key %>"><%- item.title %></h3>
                <%- item.type == 'video' ? '<i class="icon icon-facetime-video"></i>' : '' %>
                <% if (item.introText) { %><p class="introText"><%- item.introText %></p><% } %>
            </div>
        </div>

        <div class="clear"></div>
    </div>
    <% if (item.path) { %><a class="link action" href="<%= item.path %>" target="_blank"><%= (item.actionText ? item.actionText : 'Learn more')+' &raquo;' %></a><% } %>
</div><!-- featured -->
