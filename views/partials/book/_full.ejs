<div class="featured book" class="mainElement">
    <div class="slide book">
        <a href="<%= item.url %>" target="_blank"><img src="<%= item.logo %>" data-src="<%= item.url %>"></a>

        <div>
            <div class="caption">
                <a href="<%= item.url %>" target="_blank"><h3 id="<%= item.key || key %>"><%= item.name %></h3>  </a>

                <h3><em><%= item.author %></em></h3>

                <p class="introText"><%- item.introText %></p>
            </div>
            <div class="content">
                <%- item.text %>
            </div>
        </div>
        <div class="clear"></div>

        <% if (item.url) { %><a class="link action" href="<%= item.url %>"><%= (item.actionText ? item.actionText : 'Get the book')+' &raquo;' %></a><% } %>
    </div>
    
</div><!-- featured -->
