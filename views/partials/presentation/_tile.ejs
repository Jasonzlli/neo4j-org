<div class="presentation tile">
	<% var hasPath = item.path %>

    <h3><% if (hasPath) { %><a href="<%= item.path %>"><% } %><%= item.heading %><% if (hasPath) { %></a><% } %></h3>
    <% if (item.img) { %>
    <a href="<%= item.path %>"><img class="logo" src="<%= item.img %>"></a>
    <% } %>
    <div>
        <p><%- item.intro %></p>
    </div>
    <% if (hasPath) { %><p><a class="btn" href="<%= item.path %>"><%= item.actionText %></a></p><% } %>

</div>
