<div class="featured book" class="mainElement">
    <div class="slide book">
        <img src="<%= item.logo %>" data-src="<%= item.url %>">

        <div>
            <div class="caption">
                <a href="<%= item.url %>" target="_blank"><h3 id="<%= item.key || key %>"><%= item.name %></h3>  </a>

                <p class="introText"><%- item.introText %></p>
            </div>
            <div class="content">
                <%- item.text %>
            </div>
        </div>
        <div class="clear"></div>

        <a href="<%= item.url %>" target="_blank">Go to the book page >></a>
    </div>
    
</div><!-- featured -->
