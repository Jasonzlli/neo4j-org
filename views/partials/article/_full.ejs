        <div class="caption">
            <% if (item.title) { %><h3><%= item.title %></h3><% } %>
            <%- item.introText %>
        </div>
        <div class="content">
            <%- item.content %>
        </div>
        <img src="<%- item.src %>">
        <div class="clear"></div>
    </div>
</div><!-- featured -->
