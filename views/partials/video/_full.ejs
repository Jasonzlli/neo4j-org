<div class="featured" class="mainElement">
    <div class="slide video">
        <div class="caption">
            <h3><%= item.title %></h3>
            <%- item.type == 'video' ? '<i class="icon icon-facetime-video"></i>' : '' %><%- item.introText %>
        </div>
        <div class="content">
        	<img class="thumbnail" src="<%= item.thumbnail %>" data-src="<%= item.src %>">
            <%- typeof item.content == "function" ? item.content(locals) : item.content %>
        </div>
        <div class="clear"></div>
    </div>
</div><!-- featured -->
